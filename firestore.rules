rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own data and create their profile
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false; // Don't allow user deletion
    }

    // Workspaces collection
    match /workspaces/{workspaceId} {
      // Anyone authenticated can read workspaces they are a member of
      allow read: if isSignedIn() &&
                     request.auth.uid in resource.data.memberIds;

      // Anyone authenticated can create a workspace
      allow create: if isSignedIn() &&
                       request.auth.uid == request.resource.data.ownerId &&
                       request.auth.uid in request.resource.data.memberIds;

      // Only owner can update workspace (except memberIds which members can update)
      allow update: if isSignedIn() &&
                       (request.auth.uid == resource.data.ownerId ||
                        request.auth.uid in resource.data.memberIds);

      // Only owner can delete workspace
      allow delete: if isSignedIn() &&
                       request.auth.uid == resource.data.ownerId;

      // Channels subcollection
      match /channels/{channelId} {
        // Members can read all channels in their workspace
        allow read: if isSignedIn() &&
                       request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

        // Members can create channels
        allow create: if isSignedIn() &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

        // Members can update channels
        allow update: if isSignedIn() &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

        // Only workspace owner can delete channels
        allow delete: if isSignedIn() &&
                         request.auth.uid == get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.ownerId;

        // Messages subcollection
        match /messages/{messageId} {
          // Channel members can read messages
          allow read: if isSignedIn() &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

          // Channel members can create messages
          allow create: if isSignedIn() &&
                           request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds &&
                           request.auth.uid == request.resource.data.userId;

          // Only message owner can update their message
          allow update: if isSignedIn() &&
                           request.auth.uid == resource.data.userId;

          // Only message owner or workspace owner can delete
          allow delete: if isSignedIn() &&
                           (request.auth.uid == resource.data.userId ||
                            request.auth.uid == get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.ownerId);
        }
      }
    }

    // Direct Messages collection (for future use)
    match /directMessages/{dmId} {
      // Only participants can read
      allow read: if isSignedIn() &&
                     request.auth.uid in resource.data.participantIds;

      // Only participants can create
      allow create: if isSignedIn() &&
                       request.auth.uid in request.resource.data.participantIds;

      // Only participants can update
      allow update: if isSignedIn() &&
                       request.auth.uid in resource.data.participantIds;

      // Participants can delete
      allow delete: if isSignedIn() &&
                       request.auth.uid in resource.data.participantIds;
    }
  }
}
