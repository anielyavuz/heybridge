rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // System collection (FCM URL, app configs, etc.)
    // Read-only for all authenticated users
    match /system/{document=**} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Users collection
    // Contains user profile, presence (isOnline, lastSeen), and workspace memberships
    match /users/{userId} {
      // Users can read any user's data (for workspace members, DMs, presence status, etc.)
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Users can only update their own profile (including presence updates)
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false; // Don't allow user deletion
    }

    // Workspaces collection
    match /workspaces/{workspaceId} {
      // Anyone authenticated can read workspaces (needed for join by invite code)
      // OR if they are already a member
      allow read: if isSignedIn();

      // Anyone authenticated can create a workspace
      allow create: if isSignedIn() &&
                       request.auth.uid == request.resource.data.ownerId &&
                       request.auth.uid in request.resource.data.memberIds;

      // Members can update workspace to add themselves to memberIds
      // Owner can update any field
      // Allow joining: user can add themselves to memberIds if they're not already a member
      allow update: if isSignedIn() &&
                       (request.auth.uid == resource.data.ownerId ||
                        (request.auth.uid in request.resource.data.memberIds &&
                         request.auth.uid in resource.data.memberIds) ||
                        // Allow joining workspace (adding self to memberIds)
                        (request.auth.uid in request.resource.data.memberIds &&
                         !(request.auth.uid in resource.data.memberIds) &&
                         // Only memberIds field is being updated
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberIds'])));

      // Only owner can delete workspace
      allow delete: if isSignedIn() &&
                       request.auth.uid == resource.data.ownerId;

      // Channels subcollection
      match /channels/{channelId} {
        // Members can read all channels in their workspace
        allow read: if isSignedIn() &&
                       request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

        // Members can create channels
        allow create: if isSignedIn() &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

        // Members can update channels
        allow update: if isSignedIn() &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

        // Only workspace owner can delete channels
        allow delete: if isSignedIn() &&
                         request.auth.uid == get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.ownerId;

        // Messages subcollection
        match /messages/{messageId} {
          // Channel members can read messages
          allow read: if isSignedIn() &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

          // Channel members can create messages
          allow create: if isSignedIn() &&
                           request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds &&
                           request.auth.uid == request.resource.data.senderId;

          // Message sender can update their message (edit text)
          // Any workspace member can update reactions, pin status, or star status
          allow update: if isSignedIn() &&
                           request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

          // Only message sender or workspace owner can delete
          allow delete: if isSignedIn() &&
                           (request.auth.uid == resource.data.senderId ||
                            request.auth.uid == get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.ownerId);
        }
      }

      // Direct Messages subcollection (workspace-specific DMs)
      match /directMessages/{dmId} {
        // Only participants can read DM metadata
        allow read: if isSignedIn() &&
                       request.auth.uid in resource.data.participantIds;

        // Only workspace members who are participants can create
        allow create: if isSignedIn() &&
                         request.auth.uid in request.resource.data.participantIds &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.memberIds;

        // Only participants can update
        allow update: if isSignedIn() &&
                         request.auth.uid in resource.data.participantIds;

        // Participants can archive/delete
        allow delete: if isSignedIn() &&
                         request.auth.uid in resource.data.participantIds;

        // DM Messages subcollection
        match /messages/{messageId} {
          // Only participants can read DM messages
          allow read: if isSignedIn() &&
                         request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)/directMessages/$(dmId)).data.participantIds;

          // Only participants can create DM messages
          allow create: if isSignedIn() &&
                           request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)/directMessages/$(dmId)).data.participantIds &&
                           request.auth.uid == request.resource.data.senderId;

          // Participants can update messages (for reactions, read status, etc.)
          allow update: if isSignedIn() &&
                           request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)/directMessages/$(dmId)).data.participantIds;

          // Only message sender can delete their message
          allow delete: if isSignedIn() &&
                           request.auth.uid == resource.data.senderId;
        }
      }
    }

    // Webhooks collection (global, for easy lookup by webhook ID)
    match /webhooks/{webhookId} {
      // Any authenticated user can read webhooks (query filtering done client-side)
      allow read: if isSignedIn();

      // Authenticated users can create webhooks
      allow create: if isSignedIn() &&
                       request.auth.uid == request.resource.data.createdBy;

      // Webhook creator can update/delete
      allow update, delete: if isSignedIn() &&
                               request.auth.uid == resource.data.createdBy;
    }
  }
}
